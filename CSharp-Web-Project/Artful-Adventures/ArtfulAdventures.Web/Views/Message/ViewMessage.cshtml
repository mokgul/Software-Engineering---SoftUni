@model MessageInboxViewModel

<h2>Message</h2>

@{
    ViewBag.Title = "Message";
}

<div>
    <label>Sender:</label>
    @Model.Sender
</div>

<div>
    <label>Subject:</label>
    @Model.Subject
</div>

<div>
    <label>Content:</label>
    @Model.Content
</div>

<div>
    <label>Timestamp:</label>
    @Model.Timestamp
</div>
<div style="display: flex; justify-content:start; margin: 2rem 0rem 2rem -0.5rem;">
    <a class="btn btn-outline-dark my-2 blog-button-white" href="@Url.Action("Inbox", "Message")"  role="button" style="color:wheat; height: 40px; padding-left:12px; padding-right:12px;">Back to Inbox</a>
    <a class="btn btn-outline-dark my-2 blog-button-white" href="@Context.Request.Headers["Referer"]" role="button" style="color:wheat; width: 140px; height: 40px; margin-bottom: 1rem!important;">Back to History</a>
</div>
